<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>@ViewBag.Title</title>
         @Styles.Render("~/Content/Responsive")
         @RenderSection("Styles", false)
    </head>
    <body>
        @RenderBody()
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryUI")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/jqueryBlockUI")
        @Scripts.Render("~/bundles/chosen")
        @Scripts.Render("~/bundles/modernizr")
        @RenderSection("scripts", false)
        <div id="blockMsg" class="loading" style="display: none;">
            <p style="font-size:70%;">Processing...</p>
            <div class="progress progress-striped active" style="width: 80%; margin-left: 10%; margin-bottom: 10px;">

                <div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                    <span class="sr-only">ok</span>
                </div>
            </div>
        </div>
    </body>
</html>